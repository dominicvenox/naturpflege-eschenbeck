---
import { Scissors, Shovel, Droplets, Sun, ArrowRight, Trees } from 'lucide-react';

const services = [
  {
    title: 'Lawn Mowing',
    description: 'Regular mowing schedules to keep your grass at the perfect height for health and aesthetics.',
    icon: Scissors,
  },
  {
    title: 'Landscaping',
    description: 'Complete landscape design and installation to transform your outdoor living space.',
    icon: Shovel,
  },
  {
    title: 'Irrigation',
    description: 'Smart watering solutions that save money while keeping your plants lush and hydrated.',
    icon: Droplets,
  },
  {
    title: 'Tree Trimming',
    description: 'Professional pruning to promote healthy growth and remove dangerous branches.',
    icon: Trees,
  },
  {
    title: 'Seasonal Cleanup',
    description: 'Spring and fall cleanups to prepare your yard for the changing seasons.',
    icon: Sun,
  },
  {
    title: 'Hardscaping',
    description: 'Patios, walkways, and retaining walls built to last and impress.',
    icon: Shovel, // Reusing icon for simplicity or import another
  }
];
---

<section id="services" class="py-24 bg-surface-muted relative">
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-20 pointer-events-none"></div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-primary font-bold tracking-widest uppercase text-xs mb-3">Our Capabilities</h2>
      <h3 class="text-4xl md:text-5xl font-extrabold text-secondary mb-6">Complete Lawn & Garden Care</h3>
      <p class="text-secondary-light text-xl font-light">We offer a comprehensive suite of services to ensure your property looks its absolute best year-round.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class={`group bg-white rounded-2xl p-8 shadow-sm hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary/20 relative overflow-hidden animate-fade-up`} style={`animation-delay: ${index * 100}ms`}>
          <!-- Hover accent -->
          <div class="absolute top-0 left-0 w-1.5 h-full bg-gradient-to-b from-primary to-primary-dark transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"></div>
          
          <div class="mb-8 inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-surface-muted text-primary group-hover:bg-primary group-hover:text-white transition-all duration-500 shadow-inner group-hover:shadow-lg group-hover:scale-110">
            <service.icon size={32} strokeWidth={1.5} />
          </div>
          
          <h4 class="text-2xl font-bold text-secondary mb-3 group-hover:text-primary-dark transition-colors">{service.title}</h4>
          <p class="text-secondary-light mb-8 leading-relaxed">
            {service.description}
          </p>
          
          <a href="#" class="inline-flex items-center text-primary font-bold hover:text-primary-dark transition-colors group/link text-sm uppercase tracking-wide">
            Learn More 
            <ArrowRight size={16} class="ml-2 transform group-hover/link:translate-x-2 transition-transform duration-300" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
