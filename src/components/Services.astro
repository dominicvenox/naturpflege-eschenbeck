---
import { Scissors, Shovel, Droplets, Sun, ArrowRight, Trees } from 'lucide-react';

const services = [
  {
    title: 'Lawn Mowing',
    description: 'Regular mowing schedules to keep your grass at the perfect height for health and aesthetics.',
    icon: Scissors,
  },
  {
    title: 'Landscaping',
    description: 'Complete landscape design and installation to transform your outdoor living space.',
    icon: Shovel,
  },
  {
    title: 'Irrigation',
    description: 'Smart watering solutions that save money while keeping your plants lush and hydrated.',
    icon: Droplets,
  },
  {
    title: 'Tree Trimming',
    description: 'Professional pruning to promote healthy growth and remove dangerous branches.',
    icon: Trees,
  },
  {
    title: 'Seasonal Cleanup',
    description: 'Spring and fall cleanups to prepare your yard for the changing seasons.',
    icon: Sun,
  },
  {
    title: 'Hardscaping',
    description: 'Patios, walkways, and retaining walls built to last and impress.',
    icon: Shovel, // Reusing icon for simplicity or import another
  }
];
---

<section id="services" class="py-20 bg-surface-light">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-primary font-bold tracking-wide uppercase text-sm mb-2">Our Capabilities</h2>
      <h3 class="text-3xl md:text-4xl font-extrabold text-secondary-dark mb-4">Complete Lawn & Garden Care</h3>
      <p class="text-secondary-light text-lg">We offer a comprehensive suite of services to ensure your property looks its absolute best year-round.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="group bg-surface-white rounded-xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-transparent hover:border-primary/10 relative overflow-hidden">
          <!-- Hover accent -->
          <div class="absolute top-0 left-0 w-2 h-full bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"></div>
          
          <div class="mb-6 inline-flex items-center justify-center w-14 h-14 rounded-lg bg-primary/10 text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-300">
            <service.icon size={28} />
          </div>
          
          <h4 class="text-xl font-bold text-secondary-dark mb-3 group-hover:text-primary transition-colors">{service.title}</h4>
          <p class="text-secondary-light mb-6 leading-relaxed">
            {service.description}
          </p>
          
          <a href="#" class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors group/link">
            Learn More 
            <ArrowRight size={16} class="ml-2 transform group-hover/link:translate-x-1 transition-transform" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
