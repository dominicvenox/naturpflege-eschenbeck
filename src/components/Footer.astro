---
import { Facebook, Instagram, Twitter, Linkedin, Send } from 'lucide-react';
---

<footer class="bg-secondary text-white pt-20 pb-10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      
      <!-- Brand & About -->
      <div class="space-y-6">
        <span class="text-2xl font-bold text-white">Lawn<span class="text-primary-light">x</span></span>
        <p class="text-gray-400 text-sm leading-relaxed">
          Bringing premium landscaping services to your neighborhood. We care about your outdoors as much as you do.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-primary-light transition-colors"><Facebook size={20} /></a>
          <a href="#" class="text-gray-400 hover:text-primary-light transition-colors"><Instagram size={20} /></a>
          <a href="#" class="text-gray-400 hover:text-primary-light transition-colors"><Twitter size={20} /></a>
          <a href="#" class="text-gray-400 hover:text-primary-light transition-colors"><Linkedin size={20} /></a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Quick Links</h4>
        <ul class="space-y-3 text-gray-400 text-sm">
          <li><a href="#" class="hover:text-primary-light transition-colors">About Us</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Services</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Our Projects</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Testimonials</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Services</h4>
        <ul class="space-y-3 text-gray-400 text-sm">
          <li><a href="#" class="hover:text-primary-light transition-colors">Lawn Mowing</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Landscape Design</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Tree Care</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Irrigation Systems</a></li>
          <li><a href="#" class="hover:text-primary-light transition-colors">Snow Removal</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Stay Updated</h4>
        <p class="text-gray-400 text-sm mb-4">Subscribe to get seasonal tips and exclusive offers.</p>
        <form class="flex gap-2">
            <input type="email" placeholder="Your email" class="flex-1 bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 text-sm text-white focus:outline-none focus:border-primary-light" />
            <button class="bg-primary hover:bg-primary-dark text-white p-2 rounded-lg transition-colors" aria-label="Subscribe">
                <Send size={18} />
            </button>
        </form>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
      <p>&copy; {new Date().getFullYear()} Lawnx Landscaping. All rights reserved.</p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-white transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
