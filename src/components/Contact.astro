---
import { MapPin, Phone, Mail, Clock } from 'lucide-react';
---

<section id="contact" class="py-20 bg-surface-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h2 class="text-3xl md:text-4xl font-extrabold text-secondary-dark mb-4">Get Your Free Estimate</h2>
          <p class="text-secondary-light text-lg">
            Ready to transform your yard? Fill out the form or give us a call. We'll get back to you within 24 hours.
          </p>
        </div>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary/10 text-primary">
                <Phone size={24} />
              </div>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-bold text-secondary-dark">Phone</h4>
              <p class="mt-1 text-secondary-light">+1 (555) 123-4567</p>
              <p class="text-sm text-secondary-light/80">Mon-Fri 8am-6pm</p>
            </div>
          </div>

          <div class="flex items-start">
             <div class="flex-shrink-0">
               <div class="flex items-center justify-center h-12 w-12 rounded-md bg-accent/20 text-accent-hover">
                 <Mail size={24} />
               </div>
             </div>
             <div class="ml-4">
               <h4 class="text-lg font-bold text-secondary-dark">Email</h4>
               <p class="mt-1 text-secondary-light">hello@lawnx.com</p>
             </div>
           </div>

           <div class="flex items-start">
             <div class="flex-shrink-0">
               <div class="flex items-center justify-center h-12 w-12 rounded-md bg-secondary-light/10 text-secondary">
                 <MapPin size={24} />
               </div>
             </div>
             <div class="ml-4">
               <h4 class="text-lg font-bold text-secondary-dark">Office</h4>
               <p class="mt-1 text-secondary-light">123 Green Street, Garden City, GC 45678</p>
             </div>
           </div>
        </div>
      </div>

      <!-- Form -->
      <div class="bg-surface-white p-8 md:p-10 rounded-3xl shadow-2xl shadow-primary/5 border border-gray-100 animate-fade-up delay-200 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-accent/10 rounded-full blur-3xl -mr-16 -mt-16 pointer-events-none"></div>
        <form class="space-y-6 relative z-10">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="first-name" class="block text-sm font-bold text-secondary text-opacity-80">First Name</label>
              <input type="text" name="first-name" id="first-name" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-primary focus:ring-primary focus:ring-2 focus:ring-opacity-20 h-14 px-4 bg-surface-muted/50 transition-all duration-300 hover:bg-white text-secondary placeholder-gray-400" placeholder="John" />
            </div>
            <div class="space-y-2">
              <label for="last-name" class="block text-sm font-bold text-secondary text-opacity-80">Last Name</label>
              <input type="text" name="last-name" id="last-name" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-primary focus:ring-primary focus:ring-2 focus:ring-opacity-20 h-14 px-4 bg-surface-muted/50 transition-all duration-300 hover:bg-white text-secondary placeholder-gray-400" placeholder="Doe" />
            </div>
          </div>

          <div class="space-y-2">
            <label for="service" class="block text-sm font-bold text-secondary text-opacity-80">Service Needed</label>
             <select id="service" name="service" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-primary focus:ring-primary focus:ring-2 focus:ring-opacity-20 h-14 px-4 bg-surface-muted/50 transition-all duration-300 hover:bg-white text-secondary text-opacity-80">
                <option>Lawn Mowing</option>
                <option>Landscaping</option>
                <option>Tree Services</option>
                <option>Other</option>
              </select>
          </div>

          <div class="space-y-2">
            <label for="message" class="block text-sm font-bold text-secondary text-opacity-80">Project Details</label>
            <textarea id="message" name="message" rows="4" class="block w-full rounded-xl border-gray-200 shadow-sm focus:border-primary focus:ring-primary focus:ring-2 focus:ring-opacity-20 p-4 bg-surface-muted/50 transition-all duration-300 hover:bg-white text-secondary placeholder-gray-400 resize-none" placeholder="Tell us about your yard..."></textarea>
          </div>

          <button type="submit" class="w-full flex justify-center items-center py-4 px-4 border border-transparent rounded-xl shadow-lg shadow-primary/20 hover:shadow-primary/40 text-sm font-bold text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-300 transform hover:-translate-y-0.5">
            Request Quote
          </button>
        </form>
      </div>

    </div>
  </div>
</section>
