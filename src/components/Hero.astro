// Placeholder for Image component since we don't have the actual file interaction yet
const GardenImage = "/src/assets/gardener.jpg"; 
---

<section class="relative bg-surface-light overflow-hidden pt-12 md:pt-20 pb-32">
  <!-- Decorative Background Curve (SVG) -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none z-10 pointer-events-none">
    <svg class="relative block w-full h-[100px] md:h-[150px]" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-surface-white"></path>
    </svg>
  </div>

  <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-primary/10 to-transparent pointer-events-none"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      
      <!-- Content -->
      <div class="text-center lg:text-left space-y-8 pt-10 lg:pt-0">
        <div class="animate-fade-up">
            <span class="inline-block py-1.5 px-4 rounded-full bg-primary/10 text-primary-dark font-bold text-xs uppercase tracking-wider mb-6 border border-primary/10">
                #1 Landscaping Service in Region
            </span>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-secondary leading-tight tracking-tight">
              Transform Your <br class="hidden md:block"/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-light">Outdoor Space</span>
            </h1>
            <p class="mt-6 text-xl text-secondary-light max-w-2xl mx-auto lg:mx-0 font-light leading-relaxed animate-fade-up delay-100">
              Professional lawn care and landscaping services tailored to your vibrant lifestyle. We bring nature back to your doorstep.
            </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-up delay-200">
          <a
            href="#estimate"
            class="px-8 py-4 bg-primary hover:bg-primary-dark text-white rounded-full font-bold shadow-lg shadow-primary/30 hover:shadow-xl hover:shadow-primary/40 transition-all transform hover:-translate-y-1 text-center"
          >
            Get Free Estimate
          </a>
          <a
            href="#offer"
            class="px-8 py-4 bg-white hover:bg-gray-50 text-secondary-dark border-2 border-accent rounded-full font-bold shadow-md hover:shadow-lg transition-all text-center flex items-center justify-center gap-2 group"
          >
            <span>Get 20% Off</span>
            <span class="bg-accent text-secondary-dark text-[10px] font-black px-2 py-0.5 rounded-full uppercase tracking-wide group-hover:bg-accent-hover transition-colors">Limited</span>
          </a>
        </div>
        
        <div class="pt-4 flex items-center justify-center lg:justify-start gap-2 text-sm text-secondary-light animate-fade-up delay-300">
            <span class="flex text-accent">★★★★★</span>
            <span class="font-medium text-secondary">4.9/5 Rating from 200+ Clients</span>
        </div>
      </div>

      <!-- Image -->
      <div class="relative hidden md:block animate-fade-in delay-200">
        <div class="absolute -inset-4 bg-accent/20 rounded-full blur-3xl opacity-40"></div>
        <div class="relative rounded-[2rem] overflow-hidden shadow-2xl border-4 border-white transform rotate-2 hover:rotate-1 transition-transform duration-700 ease-out group">
             <img 
                src="https://images.unsplash.com/photo-1558904541-efa843a96f01?auto=format&fit=crop&q=80&w=800" 
                alt="Professional Gardener" 
                class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
                loading="eager"
             />
             <!-- Floating Badge -->
             <div class="absolute bottom-6 left-6 bg-surface-white/95 backdrop-blur p-5 rounded-2xl shadow-xl border border-gray-100">
                <p class="text-primary-dark font-extrabold text-2xl">15+ Years</p>
                <p class="text-secondary-light text-sm font-medium uppercase tracking-wide">Experience</p>
             </div>
        </div>
      </div>
    
    </div>
  </div>
</section>
