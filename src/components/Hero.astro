// Placeholder for Image component since we don't have the actual file interaction yet
const GardenImage = "/src/assets/gardener.jpg"; 
---

<section class="relative bg-surface-light overflow-hidden pt-12 md:pt-20 pb-32">
  <!-- Decorative Background Curve (SVG) -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
    <svg class="relative block w-full h-[100px] md:h-[150px]" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-surface-white"></path>
    </svg>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      
      <!-- Content -->
      <div class="text-center lg:text-left space-y-8">
        <div>
            <span class="inline-block py-1 px-3 rounded-full bg-primary-light/10 text-primary-dark font-semibold text-sm mb-4">
                #1 Landscaping Service in Region
            </span>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-secondary-dark leading-tight">
              Transform Your <br class="hidden md:block"/>
              <span class="text-primary">Outdoor Space</span>
            </h1>
            <p class="mt-6 text-lg text-secondary-light max-w-2xl mx-auto lg:mx-0">
              Professional lawn care and landscaping services tailored to your vibrant lifestyle. We bring nature back to your doorstep.
            </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="#estimate"
            class="px-8 py-4 bg-primary hover:bg-primary-dark text-white rounded-lg font-bold shadow-lg hover:shadow-primary/30 transition-all transform hover:-translate-y-1 text-center"
          >
            Get Free Estimate
          </a>
          <a
            href="#offer"
            class="px-8 py-4 bg-accent hover:bg-accent-hover text-secondary-dark rounded-lg font-bold shadow-md hover:shadow-lg transition-all text-center flex items-center justify-center gap-2"
          >
            <span>Get 20% Off</span>
            <span class="bg-white/30 px-2 py-0.5 rounded text-xs">Limited</span>
          </a>
        </div>
        
        <div class="pt-4 flex items-center justify-center lg:justify-start gap-2 text-sm text-secondary-light">
            <span class="flex text-yellow-400">★★★★★</span>
            <span class="font-medium">4.9/5 Rating from 200+ Clients</span>
        </div>
      </div>

      <!-- Image -->
      <div class="relative hidden md:block">
        <div class="absolute -inset-4 bg-primary/10 rounded-full blur-3xl opacity-50"></div>
        <!-- Using a standard HTML img for now as fallback, ideally strictly use <Image /> from astro:assets -->
        <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white transform rotate-2 hover:rotate-0 transition-transform duration-500">
             <img 
                src="https://images.unsplash.com/photo-1558904541-efa843a96f01?auto=format&fit=crop&q=80&w=800" 
                alt="Professional Gardener" 
                class="w-full h-auto object-cover"
                loading="eager"
             />
             <!-- Floating Badge -->
             <div class="absolute bottom-6 left-6 bg-surface-white/90 backdrop-blur p-4 rounded-xl shadow-lg">
                <p class="text-primary-dark font-bold text-xl">15+ Years</p>
                <p class="text-secondary-light text-sm">Experience</p>
             </div>
        </div>
      </div>
    
    </div>
  </div>
</section>
